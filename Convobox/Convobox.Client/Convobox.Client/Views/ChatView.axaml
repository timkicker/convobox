<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Convobox.Client.Views.ChatView"
             x:CompileBindings="False"
             xmlns:controls="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia">
    <DockPanel LastChildFill="True">
        <Grid DockPanel.Dock="Bottom" Height="50" Background="#262626">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBox Classes="Floating" Margin="10 0 0 0 " AcceptsReturn="True" MaxHeight="100" TextWrapping="Wrap"></TextBox>
            <Button Grid.Column="1" Margin="6" Classes="Flat">
            <materialIcons:MaterialIcon
                Width="20" Height="20"
                Kind="Send"
            />
            </Button>
        </Grid>
        <Grid>
            
        </Grid>
    </DockPanel>
</UserControl>
